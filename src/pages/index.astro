---
import BaseLayout from "../layouts/BaseLayout.astro";
import SEOHead from "../components/SEOHead.astro";
import HeaderFrame from "../components/header/HeaderFrame.astro";
import HeroBannerSolid from "../components/sections/HeroBannerSolid.astro";
import AboutSimple from "../components/sections/About.astro";
import FeaturesGrid from "../components/sections/FeaturesGrid.astro";
import ContactCTA from "../components/sections/Contact.astro";

import features from "../content/features";
import site from "../config/site";
import Footer from "../components/Footer.astro";
---
<BaseLayout>
  <SEOHead title={`${site.name} — Home`} description={site.tagline} />

  <!-- <HeaderFrame variant="popup" /> -->
  <HeaderFrame variant="bar" />

  <main id="main">
    <!-- Hero: full width; bottom edge slants RIGHT -->
    <HeroBannerSolid
      bg="primary-tint"
      bgImage={site.images.hero}
      overlayPercent={85}
      title="Simple, modern websites that help your business grow."
      subtitle="Bring your brand online in days — fast, affordable, and done-for-you."
      ctaText="Get Started"
      ctaHref="#contact"
      secondaryText="Learn more"
      secondaryHref="#services"
      angleTop={false}
      angleBottom={true}
      dirTop="left"
      dirBottom="right"
      nextBg="alt"
    />

    <!-- image="/assets/cloud.jpg" -->
    <AboutSimple
      id="about"
      title="A Partner You Can Rely On"
      
      bg="alt"
      nextBg="surface"
      angleTop={false}
      angleBottom={true}
      dirTop="right"
      dirBottom="left"
    />

    <FeaturesGrid
      id="services"
      title="What You Get"
      items={features}
      bg="surface"
      nextBg="alt"
      angleTop={false}       
      angleBottom={true} 
      dirTop="left"    
      dirBottom="right"
    />

    <ContactCTA
      id="contact"
      title="Ready to Get Started?"
      bg="alt"
      nextBg="strong"
      angleTop={false}
      angleBottom={false}
      dirTop="left"
      dirBottom="right"
    />
    <Footer />
  </main>
</BaseLayout>
