---
import { mainNav } from "../../config/menus";
import site from "../../config/site";
---
<header class="sticky top-0 z-40 bg-white/80 backdrop-blur supports-[backdrop-filter]:bg-white/60">
<nav class="mx-auto flex max-w-7xl items-center justify-between px-4 py-3">
<a href="#home" class="font-semibold tracking-tight">{site.name}</a>
<ul class="flex items-center gap-6">
{mainNav.map((item) => (
<li><a href={item.href} class="hover:opacity-80 focus:outline-none focus-visible:ring ring-offset-2 ring-black/20 px-1 py-0.5">{item.label}</a></li>
))}
</ul>
</nav>
</header>